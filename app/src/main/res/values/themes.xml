<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DinajpurZilaApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primary_color_light</item>
        <item name="colorOnPrimary">@color/on_primary_color_light</item>
        <item name="colorSecondary">@color/secondary_color_light</item>
        <item name="android:windowBackground">@color/background_color_light</item>
        <item name="colorSurface">@color/surface_color_light</item>
    </style>

    <style name="Theme.DinajpurZilaApp" parent="Base.Theme.DinajpurZilaApp" />

    <style name="BottomCurveShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item> <!-- Adjust this -->
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
