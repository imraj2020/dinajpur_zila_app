<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otpLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".OtpVerificationActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit code sent to your number"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/otpContainer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <EditText
            android:id="@+id/otpDigit1"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otpDigit2"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otpDigit3"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otpDigit4"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otpDigit5"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otpDigit6"
            style="@style/OtpDigitStyle" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OtpEditText"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/textResendTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code in 00:30"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp" />

</LinearLayout>